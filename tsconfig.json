{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["app/*"],
      "@config/*": ["app/config/*"],
      "@utils/*": ["app/utils/*"],
      "@screens/*": ["app/screens/*"],
      "@components/*": ["app/components/*"],
      "@models/*": ["app/models/*"],
      "@services/*": ["app/services/*"],
      "@theme/*": ["app/theme/*"],
      "@context/*": ["app/context/*"],
      "@lang/*": ["app/i18n/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "app", "test", "storybook"]
}
