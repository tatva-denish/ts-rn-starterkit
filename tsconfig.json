{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["app/*"],
      "assets/*": ["assets/*"],
      "constants/*": ["app/constants/*"],
      "utils/*": ["app/utils/*"],
      "theme/*": ["app/theme/*"],
      "screens/*": ["app/screens/*"],
      "components/*": ["app/components/*"],
      "models/*": ["app/models/*"],
      "services/*": ["app/services/*"],
      "context/*": ["app/context/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "app", "test", "storybook"]
}
