{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["app/*"],
      "@config": ["app/config"],
      "@utils": ["app/utils"],
      "@screens": ["app/screens"],
      "@components": ["app/components"],
      "@models": ["app/models"],
      "@services": ["app/services"],
      "@theme": ["app/theme"],
      "@context": ["app/context"],
      "@lang": ["app/i18n"],
      "@assets/*": ["assets/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
