{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "src/*": ["app/*"],

      "assets/*": ["assets/*"],
      "constants/*": ["app/constants/*"],
      "utils/*": ["app/utils/*"],
      "screens/*": ["app/screens/*"],
      "components/*": ["app/components/*"],
      "models/*": ["app/models/*"],
      "services/*": ["app/services/*"],
      "context/*": ["app/context/*"],
      "theme/*": ["app/theme/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
